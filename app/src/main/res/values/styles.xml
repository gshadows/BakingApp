<resources>
  
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  <!-- LinearLayout for Recipe/Step fragments orientation auto-select based on device rotation -->
  <style name="FragmentsAutoOrientation">
    <item name="android:orientation">vertical</item>
  </style>

  <!-- LinearLayout for Recipe fields orientation auto-select based on device rotation -->
  <style name="RecipeAutoOrientation">
    <item name="android:orientation">horizontal</item>
  </style>

  <!-- Splitter (between fragments) orientation auto-select based on device rotation -->
  <style name="SplitterAutoOrientation">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
  </style>
  
</resources>
