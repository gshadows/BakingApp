<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="@dimen/grid_recipe_padding"
  android:gravity="center_horizontal"
  tools:background="@color/colorPrimary"
  >
  
  <ImageView
    android:id="@+id/recipe_image_iv"
    android:layout_width="@dimen/grid_image_size"
    android:layout_height="@dimen/grid_image_size"
    android:scaleType="centerCrop"
    tools:src="@mipmap/ic_launcher"
    />
  
  <TextView
    android:id="@+id/recipe_name_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorAccent"
    android:textSize="@dimen/grid_recipe_name_size"
    tools:text="Chocolate Pie"
    />
  
</LinearLayout>
