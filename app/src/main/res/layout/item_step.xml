<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="8dp"
  tools:background="@color/colorPrimary"
  >
  
  <ImageView
    android:id="@+id/step_image_iv"
    android:layout_width="@dimen/steps_image_size"
    android:layout_height="@dimen/steps_image_size"
    android:scaleType="centerCrop"
    tools:src="@mipmap/ic_launcher"
    />
  
  <TextView
    android:id="@+id/step_name_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorAccent"
    android:textSize="@dimen/step_names_size"
    android:paddingLeft="@dimen/step_name_padding"
    android:paddingStart="8dp"
    android:layout_gravity="center_vertical"
    tools:text="Press the crust into baking form."
    />

</LinearLayout>
